@model PasswordChangeViewModel
@{
    ViewData["Title"] = "PasswordChange";
}

<h1>PasswordChange</h1>

<div class="row">
    <div class="col-md-6 offset-md-3">
        <h2>Şifre Yenileme</h2>
        <hr />

        @if (TempData["SuccessMessage"] != null)
        {
            <div class="alert alert-success" role="alert">
                @TempData["SuccessMessage"]
            </div>
        }

        <div class="alert alert-danger" asp-validation-summary="ModelOnly"></div>

        <form asp-controller="Member" asp-action="PasswordChange" method="post">
            <div class="row mb-3">
                <label asp-for="OldPassword" class="col-md-4 col-form-label"></label>
                <div class="col-md-8">
                    <input type="password" asp-for="OldPassword" class="form-control">
                    <span class="text text-danger" asp-validation-for="OldPassword"></span>
                </div>
            </div>

            <div class="row mb-3">
                <label asp-for="NewPassword" class="col-md-4 col-form-label"></label>
                <div class="col-md-8">
                    <input type="password" asp-for="NewPassword" class="form-control">
                    <span class="text text-danger" asp-validation-for="NewPassword"></span>
                </div>
            </div>

            <div class="row mb-3">
                <label asp-for="NewPasswordConfirm" class="col-md-4 col-form-label"></label>
                <div class="col-md-8">
                    <input type="password" asp-for="NewPasswordConfirm" class="form-control">
                    <span class="text text-danger" asp-validation-for="NewPasswordConfirm"></span>
                </div>
            </div>

            <div class="row mb-3">
                <div class="col-md-8 offset-md-4">
                    <button type="submit" class="btn btn-primary">Kayıt Ol</button>
                </div>
            </div>

        </form>
    </div>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}

