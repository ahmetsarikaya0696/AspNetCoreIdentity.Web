@using System.Security.Claims
<ul class="navbar-nav me-auto mb-2 mb-lg-0">
    @if (User.Identity.IsAuthenticated)
    {
        <li class="nav-item dropdown">
            <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                @User.Identity.Name
            </a>
            <ul class="dropdown-menu">
                <li>
                    <a asp-controller="Member" asp-action="Index" class="dropdown-item">Profil</a>
                </li>
                <li>
                    <a asp-controller="Member" asp-action="PasswordChange" class="dropdown-item">Şifremi Değiştir</a>
                </li>
                <li>
                    <a asp-controller="Member" asp-action="EditUser" class="dropdown-item">Profil Güncelle</a>
                </li>
                @if (User.HasClaim(x => x.Type == ClaimTypes.Role && x.Value == "admin"))
                {
                    <li>
                        <a asp-area="Admin" asp-controller="Home" asp-action="Index" class="dropdown-item">Admin Olarak Devam Et</a>
                    </li>
                }
                <li>
                    <a asp-controller="Member" asp-action="Logout" asp-route-returnurl="/Home/Index" class="dropdown-item">Çıkış</a>
                </li>
            </ul>
        </li>
    }
    else
    {
        <li class="nav-item">
            <a class="nav-link text-white btn btn-success" asp-area="" asp-controller="Home" asp-action="SignIn">Giriş Yap</a>
        </li>
    }
</ul>