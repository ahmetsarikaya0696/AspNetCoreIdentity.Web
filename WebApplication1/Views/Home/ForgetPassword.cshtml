@model ForgetPasswordViewModel
@{
    ViewData["Title"] = "ResetPassword";
}

<div class="row">
    <div class="col-md-6 offset-md-3">
        <h2>Şifre Yenileme</h2>
        <hr />

        @if (TempData["SuccessMessage"] != null)
        {
            <div class="alert alert-success" role="alert">
                @TempData["SuccessMessage"]
            </div>
        }

        <div class="alert alert-danger" asp-validation-summary="ModelOnly"></div>
        <div class="mb-3">
            <h4>Şifre yenileme linki e-posta adresinize gönderilecektir</h4>
        </div>
        <form asp-controller="Home" asp-action="ForgetPassword" method="post">
            <div class="row mb-3">
                <label asp-for="Email" class="col-md-4 col-form-label"></label>
                <div class="col-md-8">
                    <input type="email" asp-for="Email" class="form-control">
                    <span class="text text-danger" asp-validation-for="Email"></span>
                </div>
            </div>

            <div class="row mb-3">
                <div class="col-md-8 offset-md-4">
                    <button type="submit" class="btn btn-primary">Gönder</button>
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}