@model ResetPasswordViewModel
@{
    ViewData["Title"] = "ResetPassword";
}

<div class="row">
    <div class="col-md-6 offset-md-3">
        <h2>Şifre Sıfırlama</h2>
        <hr />
        
        @if (TempData["SuccessMessage"] != null)
        {
            <div class="alert alert-success" role="alert">
                @TempData["SuccessMessage"]
            </div>
        }

        <div class="alert alert-danger" asp-validation-summary="ModelOnly"></div>

        <form asp-controller="Home" asp-action="ResetPassword" method="post">
            <div class="row mb-3">
                <label asp-for="Password" class="col-md-4 col-form-label"></label>
                <div class="col-md-8">
                    <input type="password" asp-for="Password" class="form-control">
                    <span class="text text-danger" asp-validation-for="Password"></span>
                </div>
            </div>

            <div class="row mb-3">
                <label asp-for="PasswordConfirm" class="col-md-4 col-form-label"></label>
                <div class="col-md-8">
                    <input type="password" asp-for="PasswordConfirm" class="form-control">
                    <span class="text text-danger" asp-validation-for="PasswordConfirm"></span>
                </div>
            </div>

            <div class="row mb-3">
                <div class="col-md-8 offset-md-4">
                    <button type="submit" class="btn btn-primary">Şifreyi Sıfırla</button>
                </div>
            </div>

        </form>
    </div>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}

