@model AddRoleViewModel

@{
    ViewData["Title"] = "AddRole";
}
<div class="row">
    <div class="col-md-6 offset-md-3">
        <h1>Rol Oluşturma</h1>
        <hr />
        
        <form asp-area="Admin" asp-controller="Roles" asp-action="AddRole">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group mt-3">
                <input type="submit" value="Oluştur" class="btn btn-primary" />
            </div>
        </form>
        <div class="mt-3">
            <a asp-area="Admin" asp-asp-controller="Roles" asp-action="Index">Rol Listesine Geri Dön</a>
        </div>
    </div>
</div>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
