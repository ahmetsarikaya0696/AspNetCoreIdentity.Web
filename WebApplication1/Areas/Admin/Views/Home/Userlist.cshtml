@model List<UserViewModel>

<h1>Userlist</h1>
<hr />

<table class="table">
    <thead>
        <tr>
            <th scope="col">Id</th>
            <th scope="col">UserName</th>
            <th scope="col">Email</th>
            <th scope="col"></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var userViewModel in Model)
        {
            <tr>
                <td>@userViewModel.Id</td>
                <td>@userViewModel.UserName</td>
                <td>@userViewModel.Email</td>
                <td>
                    <a asp-controller="Roles" asp-action="AssignRoleToUser" asp-route-id="@userViewModel.Id">Rol Ata</a>
                </td>
            </tr>
        }
    </tbody>
</table>
